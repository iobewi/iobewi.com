<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
    {% if description %}<meta name="description" content="{{ description }}" />{% endif %}
    <link rel="stylesheet" href="/assets/css/main.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="brand">
          <a href="/" class="brand-link">
            <img src="/assets/images/iobewi-logo.png" alt="IOBEWI" class="brand-logo" />
          </a>
          <p class="tagline">{{ site.description }}</p>
        </div>
        <nav aria-label="Navigation principale">
          <ul class="nav">
            {% for item in navigation %}
              {% set isActive = page.url == item.url %}
              <li>
                <a href="{{ item.url }}"{% if isActive %} aria-current="page"{% endif %}>
                  {{ item.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
        <div class="social-header" aria-label="Liens externes">
          {% for s in social %}
            <a class="social-link"
              href="{{ s.url }}"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="{{ s.aria }}">
              {% if s.icon == "github" %}
                <svg viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 .5C5.73.5.75 5.48.75 11.75c0 4.89 3.17 9.05 7.57 10.52.55.1.75-.24.75-.53v-1.9c-3.08.67-3.73-1.48-3.73-1.48-.5-1.27-1.22-1.6-1.22-1.6-1-.68.08-.67.08-.67 1.1.08 1.68 1.13 1.68 1.13.98 1.68 2.57 1.19 3.2.9.1-.71.38-1.19.69-1.46-2.46-.28-5.05-1.23-5.05-5.46 0-1.2.43-2.18 1.13-2.95-.11-.28-.49-1.4.11-2.92 0 0 .93-.3 3.05 1.13a10.6 10.6 0 0 1 5.56 0c2.12-1.43 3.05-1.13 3.05-1.13.6 1.52.22 2.64.11 2.92.7.77 1.13 1.75 1.13 2.95 0 4.24-2.6 5.18-5.07 5.45.39.34.73 1.01.73 2.04v3.02c0 .29.2.64.76.53 4.4-1.47 7.56-5.63 7.56-10.52C23.25 5.48 18.27.5 12 .5z"/>
                </svg>
              {% elif s.icon == "linkedin" %}
                <svg viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M4.98 3.5C3.33 3.5 2 4.84 2 6.48c0 1.63 1.32 2.98 2.96 2.98h.02c1.66 0 2.98-1.35 2.98-2.98C7.96 4.84 6.64 3.5 4.98 3.5zM2.4 21.5h5.16V9H2.4v12.5zM9.76 9h4.94v1.71h.07c.69-1.23 2.38-2.53 4.9-2.53 5.24 0 6.2 3.45 6.2 7.94v5.38h-5.16v-4.77c0-1.14-.02-2.6-1.58-2.6-1.59 0-1.83 1.24-1.83 2.52v4.85H9.76V9z"/>
                </svg>
              {% endif %}
            </a>
          {% endfor %}
        </div>
      </div>
    </header>

    <main class="main-content">
      <div class="container">
        {% if page.url != "/" %}
          <header class="page-header">
            <h1>{{ title }}</h1>
            {% if description %}<p class="lead">{{ description }}</p>{% endif %}
          </header>
        {% endif %}
        {{ content | safe }}
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>
          <a href="/mentions-legales/">Mentions légales</a>
        </p>
        <p>© {{ site.title }}</p>
      </div>
    </footer>
  </body>
</html>
